@model web.ViewModels.ContratoCrearViewModel

@{

}

@{
    ViewData["Title"] = "Create";
}

<h1>Contrato</h1>
<hr />
<div class="row">
    <div class="col-md-8 col-sm-10 col-xs-10">
        <form asp-action="Create" style="padding:2rem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-inline-flex form-group row">
                <div class="form-group col-md-6 col-sm-12 mt-3 mb-4">
                    <label asp-for="Contrato.Numero" class="control-label">Numero</label>
                    <input asp-for="Contrato.Numero" class="form-control" />
                    <span asp-validation-for="Contrato.Numero" class="text-danger"></span>
                </div>
                <div class="form-group form-check col-md-6 col-sm-12 mt-3 mb-4 cumplido">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Contrato.Cumplido" /> @Html.DisplayNameFor(model => model.Contrato.Cumplido)
                    </label>
                </div>
            </div>
            <div class="form-group row">
                <div class="form-group col-md-6 col-sm-12 mt-3 mb-4">
                    <label asp-for="Contrato.FechaEmision" class="control-label">Fecha Emision</label>
                    <input asp-for="Contrato.FechaEmision" class="form-control" />
                    <span asp-validation-for="Contrato.FechaEmision" class="text-danger"></span>
                </div>
                <div class="form-group mx-auto col-md-6 col-sm-12 mt-3 mb-4">
                    <label asp-for="Contrato.FechaLimite" class="control-label">Fecha Limite</label>
                    <input asp-for="Contrato.FechaLimite" class="form-control" />
                    <span asp-validation-for="Contrato.FechaLimite" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Contrato.MedidoEnToneladas" /> @Html.DisplayNameFor(model => model.Contrato.MedidoEnToneladas)
                </label>
            </div>
            <div class="form-group row">
                <div class="form-group col-md-6 col-sm-12 mt-3 mb-4">
                    <label asp-for="Contrato.CantidadCamiones" class="control-label">Cantidad de Camiones</label>
                    <input asp-for="Contrato.CantidadCamiones" class="form-control" />
                    <span asp-validation-for="Contrato.CantidadCamiones" class="text-danger"></span>
                </div>
                <div class="form-group mx-auto col-md-6 col-sm-12 mt-3 mb-4">
                    <label asp-for="Contrato.CantidadEnToneladas" class="control-label">Cantidad en Toneladas</label>
                    <input asp-for="Contrato.CantidadEnToneladas" class="form-control" />
                    <span asp-validation-for="Contrato.CantidadEnToneladas" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="form-group col-md-6 col-sm-12 mt-3 mb-4">
                    <label asp-for="Contrato.PrecioTonelada" class="control-label">Precio Tonelada</label>
                    <input asp-for="Contrato.PrecioTonelada" class="form-control" />
                    <span asp-validation-for="Contrato.PrecioTonelada" class="text-danger"></span>
                </div>
                <div class="form-group mx-auto col-md-6 col-sm-12 mt-3 mb-4">
                    <label asp-for="Contrato.MetodoDePago" class="control-label">Metodo de pago</label>
                    <input asp-for="Contrato.MetodoDePago" class="form-control" />
                    <span asp-validation-for="Contrato.MetodoDePago" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-block">
                <label asp-for="Contrato.GranoId" class="control-label">Grano</label>
                <select asp-for="Contrato.GranoId" class="form-select" asp-items="ViewBag.GranoId"></select>
            </div>
            <div class="form-group row">
                <div class="form-group col-md-6 col-sm-12 mt-3 mb-4">
                    <label asp-for="Contrato.ProveedorId" class="control-label">Proveedor</label>
                    <select asp-for="Contrato.ProveedorId" class="form-select" style="width:100%" asp-items="ViewBag.ProveedorId"></select>

                </div>
                <div class="mx-auto col-md-6 col-sm-12 mt-3 mb-4">
                    <label asp-for="Contrato.EmpleadoId" class="control-label">Empleado</label>
                    <select asp-for="Contrato.EmpleadoId" class="form-select" style="width:100%" asp-items="ViewBag.EmpleadoId"></select>
                </div>
            </div>

            <div class="row form-group">
                <div class="card">
                    <div class="card-header">
                        Indicadores
                    </div>
                    <div class="card-body">
                        <div class="align-items-end row mb-4 mt-4">
                            <div class="col-sm-6">
                                <label class="form-label">Nombre</label>
                                <select placeholder="Seleccione un indicador" id="IndicadorSeleccionado" class="form-select" asp-items="Model.IndicadoresNombres">
                                    <option disabled selected>Selecciona una opción</option>
                                </select>
                            </div>
                            <div class="col-sm-3">
                                <label class="form-label">Valor</label>
                                <input class="form-control form-control-sm" type="text" id="txtValor">
                            </div>
                            <div class="col-sm-3">
                                @*<button class="btn btn-success btn-sm" onclick="agregarElementos() id="btnAgregar">Agregar</button>*@
                                <button type="button" class="btn btn-success btn-sm" id="btnAgregar">Agregar</button>
                                @*<button class="btn btn-primary btn-sm" id="btnTerminar">Terminar</button>*@
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-bordered table-sm" id="tbIndicadores">
                                    <thead>
                                        <tr class="table-dark">
                                            <th>Nombre</th>
                                            <th>Valor</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="form-group inline-group mt-3 mb-4">
                <input type="submit" value="Guardar" class="btn btn-success" id="guardarDatos" />
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
            @*Boton creado solo para probar si se crea bien el array de Indicadores*@
            @*<button id="CreacionArray" type="button">Crear e Imprimir Array</button>*@
        </form>
    </div>
</div>
@section Scripts {
    @{
        <script src="js/jquery-3.5.1.min.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>

        const oIndicadores = []

        $("#btnAgregar").on("click", function () {
            $("#tbIndicadores tbody").append(
                $("<tr>").append(
                    $("<td>").text($("#IndicadorSeleccionado").val()),
                    $("<td>").text($("#txtValor").val()),
                    $("<td class='claseTd'>").append(
                        $("<button class='btn btn-danger btn-sm text-center' onclick='EliminarFila()' type='button'></button>").append(
                            $("<i class='bi bi-trash'' > </i>"))),
                )
            )
            $("#txtNombre").val("");
            $("#txtValor").val("");

        })

        function EliminarFila() {
            console.log(event.target.localName)
            if (event.target.localName === "i") {
                let boton = event.target.parentNode
                let td = boton.parentNode;
                let tr = td.parentNode;
                let table = tr.parentNode;
                table.removeChild(tr);
            }
            else {
                console.log(event)
                let boton = event.target.parentNode
                let td = boton.parentNode;
                let tr = td.parentNode;
                tr.removeChild(td);
            }
        }

        //Funcion que crea un array de indicadores a partir de los datos cargados en la tabla
        $("#guardarDatos").on("click", function () {

            //Recorro los tr de la tabla y le asigno sus valores a los elementos Indicadores
            $("#tbIndicadores > tbody > tr").each(function (i, tr) {
                oIndicadores.push(
                    {
                        Nombre: $(tr).find('td:eq(0)').text(),
                        Valor: parseInt($(tr).find('td:eq(1)').text()),
                    }
                )
            })

            $.ajax({
                type: "POST",
                url: "/Contratos/GuardarDatos",
                data: JSON.stringify(oIndicadores),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
            });
            console.log(oIndicadores);
        })

    </script>
    }
